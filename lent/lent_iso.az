public fn main()
{
    let book: mut = new Book(new Author());
    {
        let editor = book.edit();
        book.author = new Author(); // ERROR `book` has been lent as iso
    }
    book.author = new Author();
}

public class Book
{
    public var author: Author;

    // The inferred return type of this is `mut Book`
    public new(mut self, .author) { }

    public fn edit(lent iso self) -> lent mut Editor
    {
        // Shows one can move a `lent iso` parameter
        return new Editor(move self);
    }
}

public class Author
{
}

public class Editor
{
    public let book: iso Book;

    public new(mut self, .book) { }
}
